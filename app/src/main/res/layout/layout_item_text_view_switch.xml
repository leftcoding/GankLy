<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_rl_auto_check"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_switch_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="?attr/textTitleColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_switch_txt_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="?attr/textPrimaryColor"
            android:textSize="14sp"
            android:visibility="visible" />
    </LinearLayout>

    <com.gank.gankly.widget.LSwitch
        android:id="@+id/item_switch_auto_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>