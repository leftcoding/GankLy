<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jiandan_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/meiziDailyItemBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/jiandan_txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:text=""
                android:textColor="?attr/baseAdapterItemTextColor"
                android:textSize="16sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jiandan_txt_title"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/jiandan_txt_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="?attr/textSecondaryColor"/>

            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/jiandan_img"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_gravity="end"
            android:contentDescription="@null"
            android:scaleType="centerCrop"/>
    </LinearLayout>
</LinearLayout>